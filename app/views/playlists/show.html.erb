<div class="container">
<h1>you are here</h1>



<div id="playlist">
	<h3> About <%= @playlist.name %> playlist </h3>
	<p> Number of tracks: <%= @playlist.songs.count %>
	<ol class ="list-group">
		<% @playlist.songs.each do |song| %>
			<li class="list-group-item"> <%= song.name %> by <%= song.artist.name %></li>
				<ul>
					<li class="list-group-item"> About the track: 
						 <%= song.view_summary %></li> <br>
					<li class="list-group-item">  About <%= song.artist.name %>: 
						<br> 
						<img src="<%= song.artist.image %>"> <br>
						<%= song.artist.view_summary %></li>
					<li class="list-group-item">  About the album: 
						<br>
						<img src="<%= song.album.image %>"><br>
						<%= song.album.name %> <br>
						<%= song.album.view_summary %>
						<br>
					</li><br>
				</ul>
		<% end %>
	</ol>
</div>	