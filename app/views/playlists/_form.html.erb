<div class="centered" id="form-box">

	<%= form_for @playlist, :html => { :class => "form-inline center-block"} do |f| %>

		<% if @playlist.errors.any? %>
			<div class="alert alert-danger" role="alert">
				<ul><%  @playlist.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<%  end %>
				</ul>
			</div>
		<% end %>

		<div class="form-group">
			<%= f.label :username, for: "inputusername" %> 
			<%= f.text_field :username, class: "input-field", id: "inputusername" %> <br> <br>
		</div>
		<div class="form-group">
			<%= f.label :playlist_id, "Playlist ID", for: "inputplaylist" %>
			<%= f.text_field :playlist_id, class: "input-field", for: "inputplaylist"  %><br> <br>
		</div>
		<br>
		<!-- <div class="form-group"> -->
			<%= f.submit "load my playlist", class: "btn btn-outline-secondary center-block" %>
		<!-- </div> -->
	<% end %> 

</div>